<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/SIZE_BOTTOM"
        android:background="@color/WHITE_COMMON"
        android:orientation="vertical">

        <!--<ImageView-->
        <!--android:id="@+id/imageView3"-->
        <!--android:layout_width="match_parent"-->
        <!--android:layout_height="@dimen/SIZE_LINE"-->
        <!--android:layout_alignParentTop="true"-->
        <!--android:background="@drawable/action_tab_line"/>-->

        <ImageView
            style="@style/line_common"
            android:layout_alignParentTop="true"
            android:background="@color/LINE_2"/>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/tab_p0000_iv"
                android:layout_marginTop="4dp"
                android:layout_width="@dimen/SIZE_WIDGET_SMALL"
                android:layout_height="@dimen/SIZE_WIDGET_SMALL"
                android:layout_centerHorizontal="true"
                android:src="@drawable/action_tab_1"/>

            <TextView
                android:id="@+id/tab_p0000_tv"
                android:layout_width="match_parent"
                android:layout_height="@dimen/SIZE_INTERVAL"
                android:gravity="center"
                android:text="New Text"
                android:layout_below="@+id/tab_p0000_iv"
                android:textColor="@drawable/action_tab_word"
                android:textSize="@dimen/WORD_LEVEL_3"/>

            <TextView
                android:layout_width="@dimen/SIZE_INTERVAL"
                android:layout_height="@dimen/SIZE_INTERVAL"
                android:text="@string/text_max_msg_count"
                android:textSize="@dimen/WORD_LEVEL_4"
                android:background="@mipmap/circle_red"
                android:textColor="@color/WHITE_COMMON"
                android:gravity="center"
                android:id="@+id/tab_p0000_tv_count"
                android:layout_marginLeft="24dp"
                android:layout_marginStart="24dp"
                android:layout_alignTop="@+id/tab_p0000_iv"
                android:layout_alignLeft="@+id/tab_p0000_iv"
                android:layout_alignStart="@+id/tab_p0000_iv"/>


        </RelativeLayout>
    </LinearLayout>
</RelativeLayout>

