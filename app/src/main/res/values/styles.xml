    <style name="widget_iv_delete">
        <item name="android:layout_width">@dimen/SIZE_WIDGET_LARGE</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:src">@mipmap/icon_delete_text</item>
        <item name="android:padding">@dimen/SIZE_INTERVAL</item>
        <item name="android:layout_alignParentRight">true</item>
    </style>

    <style name="widget_iv_next">
        <item name="android:layout_width">@dimen/SIZE_WIDGET</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:src">@mipmap/icon_next</item>
        <item name="android:paddingLeft">@dimen/SIZE_INTERVAL</item>
        <item name="android:paddingRight">@dimen/SIZE_INTERVAL</item>
        <item name="android:layout_alignParentRight">true</item>
        <item name="android:layout_centerVertical">true</item>
    </style>

    <style name="widget_iv_switch">
        <item name="android:layout_width">@dimen/SIZE_ITEM</item>
        <item name="android:layout_height">@dimen/SIZE_WIDGET</item>
        <item name="android:src">@mipmap/icon_switch_on</item>
        <item name="android:paddingLeft">@dimen/SIZE_INTERVAL_HALF</item>
        <item name="android:paddingRight">@dimen/SIZE_INTERVAL_HALF</item>
        <item name="android:layout_marginRight">@dimen/SIZE_INTERVAL_HALF</item>
        <item name="android:layout_alignParentRight">true</item>
        <item name="android:layout_centerVertical">true</item>
    </style>

    <style name="anim_popup_dir">
        <item name="android:windowEnterAnimation">@anim/slide_in</item>
        <item name="android:windowExitAnimation">@anim/slide_out</item>
    </style>


</resources>
